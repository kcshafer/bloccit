<h1>New Question!</h1>
 
 <div class="row">
    <div class="col-md-4">
        <h1>Think of a question</h1>
    </div>
    <div class="col-md-8">
        <%= form_for @question do |q| %>
            <div class="form-group">
                <%= q.label :title %>
                <%= q.text_field :title, class: 'form-control', placeholder: "Enter questiom title" %>
            </div>
            <div class="form-group">
                <%= q.label :body %>
                <%= q.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
            </div>
            <div class="form-group">
                <%= q.label :resolved %>
                <%= q.check_box :resolved, class: 'form-control'%>
            </div>
            <div class="form-group">
                <%= q.submit "Save", class: 'btn btn-success' %>
            </div>
        <% end %>
   </div>
 </div>