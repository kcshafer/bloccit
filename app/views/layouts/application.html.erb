 <!DOCTYPE html>
 <html>
 <head>
    <title>Bloccit</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
 </head>
 <body>
    <div class="container">
        <ul class="nav nav-tabs">
            <li class="col-md-1"><%= link_to "Bloccit", root_path %></li>
            <li class="col-md-1"><%= link_to "About", about_path %></li>
            <li class="col-md-1"><%= link_to "Topics", topics_path %></li>
            <li class="col-md-9 pull-right">
            
            
                <div class="user-info text-right row">
                    <% if current_user %>
                    
                        <div class="col-md-11">
                            <div class="row">
                                <div class="col-md-12"><%= current_user.name %></div>
                                <div class="col-md-12"><%= link_to "Sign Out", session_path(current_user), method: :delete %></div>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <img src="<%= avatar_url(current_user) %>" />
                        </div>
                    
                        
                        
                    <% else %>
                        <%= link_to "Sign In", new_session_path %> or
                        <%= link_to "Sign Up", new_user_path %>
                    <% end %>            
                
                
                </div>
            </li>
            
        </ul>
        

        <% if flash[:notice] %>
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash[:notice] %>
            </div>
        <% elsif flash.now[:alert] %>
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash.now[:alert] %>
            </div>
        <% elsif flash[:alert] %>
            <div class="alert alert-warning">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash[:alert] %>
            </div>
        <% end %>
        <%= yield %>
    </div>
 </body>
 </html>